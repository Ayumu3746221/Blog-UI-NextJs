generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin_users {
  user_id             BigInt                @id @default(autoincrement())
  user_name           String                @unique @db.VarChar(100)
  content_user_failes content_user_failes[]
  contents            contents[]
  images              images[]
}

model content_user_failes {
  id          BigInt      @id @default(autoincrement())
  content_id  BigInt
  user_id     BigInt
  filename    String      @db.VarChar(255)
  contents    contents    @relation(fields: [content_id], references: [content_id], onDelete: NoAction, onUpdate: NoAction)
  admin_users admin_users @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
}

model contents {
  content_id          BigInt                @id @default(autoincrement())
  user_id             BigInt
  title               String                @db.VarChar(255)
  image_url           String?
  content_url         String?
  updated_at          DateTime?             @default(now()) @db.Timestamp(6)
  is_published        Boolean               @default(false)
  excerpt             String?
  content_user_failes content_user_failes[]
  admin_users         admin_users           @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
}

model images {
  id          Int         @id @default(autoincrement())
  user_id     BigInt
  title       String?     @db.VarChar(255)
  image_url   String?     @db.VarChar(255)
  admin_users admin_users @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
}
