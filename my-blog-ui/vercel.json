{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "env": {
          "GOOGLE_APPLICATION_CREDENTIALS": "/tmp/service-account.json",
          "INSTANCE_CONNECTION_NAME": "$INST_CONN_NAME"
        }
      },
      "deployHooks": {
        "beforeBuild": [
          "node -e 'require(\"@google-cloud/secret-manager\").v1.SecretManagerServiceClient().accessSecretVersion({ name: \"projects/$PROJECT_ID/secrets/cloud-sql-service-account-key/versions/latest\" }).then(res => { require(\"fs\").writeFileSync(\"/tmp/service-account.json\", res.payload.data.toString()); }).catch(console.error);'"
        ]
      }
    }
  ],
  "images": {
    "cloud-sql-proxy": {
      "ports": [5432],
      "entrypoint": [
        "/cloud_sql_proxy",
        "-instances=$INSTANCE_CONNECTION_NAME=tcp:5432"
      ]
    }
  }
}
